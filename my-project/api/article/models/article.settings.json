{
  "kind": "collectionType",
  "collectionName": "article",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "content": {
      "type": "richtext"
    },
    "date": {
      "type": "date"
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3,
      "maxLength": 100
    },
    "subtitle": {
      "type": "string"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "category",
      "via": "articles"
    },
    "slug": {
      "type": "string"
    }
  }
}
